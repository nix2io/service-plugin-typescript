        "eslint": "^7.13.0",
        "eslint-plugin-jsdoc": "^30.7.7",
        "mocha": "^8.2.1",
        "prettier": "^2.1.2",
        "ts-node": "^9.0.0",
        "typedoc": "^0.19.2",
        "typescript": "^4.0.5"
    },
    "files": [
        "dist"
    ],
    "dependencies": {
        "@nix2/service-core": "1.0.11"
